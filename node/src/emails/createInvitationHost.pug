extends main.pug

block content
    table(class="body" data-made-with-foundation="")
      tr
        td(class="float-center" align="center" valign="top")
          center(data-parsed="")
            table(bgcolor="#8a8a8a" align="center" class="wrapper header float-center")
              tr
                td.wrapper-inner
                  table(align="center" class="container")
                    tbody
                      tr
                        td
                          table(bgcolor="#8a8a8a" class="row collapse")
                            tbody
                              tr
                                th(class="small-6 large-6 columns last" valign="middle")
                                  table
                                    tr
                                      th
                                        p.text-right MY THAI STAR
            table(align="center" class="container float-center")
              tbody
                tr
                  td
                    table.spacer
                      tbody
                        tr
                          td(height="16px" style="font-size:16px;line-height:16px;") &#xA0;
                    table.row
                      tbody
                        tr
                          th(class="small-12 large-12 columns first last")
                            table
                              tr
                                th
                                  h1 Hi, #{name}
                                  p.lead Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni, iste, amet consequatur a   veniam.
                                  p
                                    b Booking date: 
                                    | #{date} 
                                  p
                                    b  Booking hour: 
                                    | #{hour}
                                  p
                                    b Guests list:
                                    ul 
                                      each item in guest
                                        li= item      
                            center(data-parsed="")
                              table(class="button alert float-center")
                                tr
                                  td
                                    table
                                      tr
                                        td
                                          a(href="#") Cancel the booking